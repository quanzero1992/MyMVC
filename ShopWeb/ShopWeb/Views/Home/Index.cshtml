@using ShopWeb.Models;
@model List<product>

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/Layout.cshtml";
 }

@section SlideShow
{
    @RenderPage("~/Views/Shared/SlideShow.cshtml")
}

@{string ImgServer = ViewBag.ImageServer;}
<div class="features_items">
    <!--features_items-->
    <h2 class="title text-center">Features Items</h2>

    @foreach (var item in @Model.Where(x => x.Brands == 1).ToList())
    {
        <div class="col-sm-4">
            <div class="product-image-wrapper">
                <div class="single-products">
                    <div class="productinfo text-center">
                        @*<p>@ImgServer</p>*@
                        <img src=@Url.Content(ImgServer + item.MainImage) alt="" />
                        <h2>@item.Price.Value.ToString("#,#")</h2>
                        <p>@item.Name</p>
                        @*<a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>*@
                    </div>
                    <div class="product-overlay">
                        <div class="overlay-content">
                            @*     <h2>$56</h2>
                            <p>Easy Polo Black Edition</p>*@
                            <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                        </div>
                    </div>
                </div>
                <div class="choose">
                    <ul class="nav nav-pills nav-justified">
                        <li><a href="#"><i class="fa fa-plus-square"></i>Add to wishlist</a></li>
                        <li><a href="#"><i class="fa fa-plus-square"></i>Add to compare</a></li>
                    </ul>
                </div>
            </div>
        </div>
    }

</div>
<!--features_items-->

<div class="category-tab">
    <!--category-tab-->
    <div class="col-sm-12">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#tshirt" data-toggle="tab">Áo phông, sơ mi</a></li>
            <li><a href="#blazers" data-toggle="tab">Áo khoác</a></li>
            <li><a href="#sunglass" data-toggle="tab">Kính thời trang</a></li>
